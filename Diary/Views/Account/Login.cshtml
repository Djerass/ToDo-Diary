@model ToDo_Diary.ViewModels.LoginViewModel
 
<h2>Login</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
    <div  class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group"> 
        <label asp-for="Password">Password</label><br />
        <input required="" class="form-control" asp-for="Password" />
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="RememberMe">Remember me</label><br />
        <input asp-for="RememberMe" />
    </div>
    <div>
        <input class="btn btn-primary" type="submit" value="Enter" />
    </div>
</form>