@model IEnumerable<ToDoDiaryWeb.Models.MuscleGroup>

@{
    ViewBag.Title = "List of Muscle Groups";
    Layout = "_Layout";
}

<h2>List of Muscle groups</h2>
<a asp-controller="Muscle" asp-action="Add" class="btn btn-primary">Add</a>
@if (Model.Any())
{
    <table class="table">
        <thead>
         <tr>
            <th scope="col">Id</th>
            <th scope="col">Name of group</th>
            <th scope="col">Actions</th>
         </tr>
        </thead>
        <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>@i.Id</td>
                <td>@i.Name</td>
                <td>
                    <a asp-action="Delete" asp-controller="Muscle" asp-route-id="@i.Id">Delete</a>
                      /  
                    <a asp-action="Update" asp-controller="Muscle" asp-route-id="@i.Id">Update</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}