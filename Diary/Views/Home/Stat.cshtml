@model IEnumerable<ToDoDiaryWeb.Models.ToDo>
@{
    ViewData["Title"]="Statistic";
}
 <div class="container">   
<div class="card text-center">
    <div class="card-header"><h3>Statistic</h3></div>
    <div class="card-body">
        <div class="card-title"></div>
        <p class="card-text">Count of all Tasks: <b>@ViewData["AllCount"]</b></p>
        <p class="card-text">Count of unfinished Tasks: <b>@ViewData["NotFinishedCount"]</b></p>
        <p class="card-text">Count of failed Tasks: <b>@ViewData["FailedCount"]</b></p>
        <p><button class="btn bg-warning" type="button" data-toggle="collapse" data-target="#collapseStat" aria-expanded="false" aria-controls="collapseStat">
            Display failed tasks
        </button></p>
        <div class="collapse" id="collapseStat">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Description</th>
                <th scope="col">DeadLine</th>
              
                        
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                   
                      
                </tr>
            }
        </table>
        </div>
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
    </div>
</div>
</div>