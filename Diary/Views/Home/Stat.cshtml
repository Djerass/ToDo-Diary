@model IEnumerable<ToDoDiaryWeb.Models.ToDo>
@{
    ViewData["Title"]="Statistic";
}
 <div class="container">   
<div class="card">
    <div class="card-header">Statistic</div>
    <div class="card-body">
        <div class="card-title"></div>
        <p class="card-text">Count of all Tasks: @ViewData["AllCount"]</p>
        <p class="card-text">Count of unfinished Tasks: @ViewData["NotFinishedCount"]</p>
        <p class="card-text">Count of failed Tasks: @ViewData["FailedCount"]</p>
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Description</th>
                <th scope="col">DeadLine</th>
                <th scope="col">Status</th>
                        
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                      
                </tr>
            }
        </table>
       
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</a>
    </div>
</div>
</div>