@model IEnumerable<ToDo>
<h2><span class="badge badge-secondary">@ViewData["DateToDo"]</span></h2>
@if (Model.Any())
{
    
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Description</th>
            <th scope="col">DeadLine</th>
            <th scope="col">Status</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
               <td><a asp-action="Change" asp-controller="ToDo" asp-route-Id="@item.Id" class="btn  btn-success">Change Status</a>
                    <a asp-controller="ToDo" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-controller="ToDo" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
             </tr>
        }
    </table>
}
else
{
    <h3 class="nothing">Nothing planed on this day yet</h3>
}
