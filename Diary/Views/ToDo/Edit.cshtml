@model ToDoDiaryWeb.Models.ToDo


@if (Model!=null)
{
<form method="POST">
  @Html.HiddenFor(Model=>Model.Id)
 <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input required="" asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

           <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input required="" asp-for="Date" type="text"   class="form-control input-validation-error" value="@Model.Date.ToShortDateString()" onfocus="(this.type='date')"/>
                <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                
              <div class="form-group">
                <label  class="control-label">Time</label>
                <input required="" name="time"  type="time" class="form-control" value="@Model.Date.TimeOfDay.ToString()" />
                
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>

</form>
}
else
{
    
}