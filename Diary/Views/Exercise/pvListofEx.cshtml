@model ToDo_Diary.ViewModels.ExerciseViewModel
<p class="h2">List of exercises </p>
@if (Model.Exercises.Any())
{
    <table class="table">
        <thead>
        <tr>
            @if (User.IsInRole("admin"))
            {
                <th scope="col">Id</th>
            }
            <th scope="col">Name</th>
            <th scope="col">Muscle Group</th>
            <th scope="col">More</th>
            @if (User.IsInRole("admin"))
            {
                <th scope="col">Actions</th>
            }    
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Exercises)
        {
            <tr>
                @if (User.IsInRole("admin")){
                    <th scope="row">@item.Id</th>
                }
                <td>@item.Name</td>
                <td>@item.MuscleGroup.Name</td>
                <td><a class="btn btn-info" asp-action="More" asp-controller="Exercise" asp-route-id="@item.Id" >More</a></td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-controller="Exercise" asp-route-id="@item.Id">Edit</a> /
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Exercise" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>                                                                                                                                                                                 
                    
        }
        </tbody>
    </table>
}
