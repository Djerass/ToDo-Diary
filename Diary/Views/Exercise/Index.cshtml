@model IEnumerable<ToDoDiaryWeb.Models.Exercise>

@{
    ViewBag.Title = "List of Exercises";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                
                <p class="card-text">Click to add exercise</p>
                <a asp-action="Add" asp-controller="Exercise" class="btn btn-primary">Add</a>
            </div>
           
        </div>
    </div>
        
    <div class="col-8">
        <h2 class="h2">List of exercise</h2>
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Muscle Group</th>
                    <th scope="col">More</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>@item.MuscleGroup.Name</td>
                        <td><a asp-action="More" asp-controller="Exercise" asp-route-id="@item.Id" >Press to read more Info</a></td>
                        <td><a asp-action="Edit" asp-controller="Exercise" asp-route-id="@item.Id">Edit</a> /  <a asp-action="Delete" asp-controller="Exercise" asp-route-id="@item.Id">Delete</a></td>
                    </tr>
                    
                }
                </tbody>
            </table>
        }
    </div>
    
</div>
