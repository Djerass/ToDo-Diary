@model ToDoDiaryWeb.ViewModels.WorkoutViewModel

@if (Model.Trainings.Any())
{
    foreach (var training in Model.Trainings)
    {
        <div>@training.Exercise.Name - @training.Weight - @training.Count</div>
        <div></div>
    }
}
else
{
    <h2>There are no any  exercises today yet</h2>
}
<a class="btn btn-primary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
    Ссылка с href
</a>
<div class="collapse" id="collapseExample">
<div class="card card-body">
<form asp-controller="Workout" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Workout.ExerciseId">Choose Exercise</label>
        <div class="form-group">
            <select class="form-control"  asp-for="Workout.ExerciseId" asp-items="@(new SelectList(ViewBag.Exercises, "Id", "Name"))">
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Workout.Weight">Weight</label>
            <input type="number" required="" class="form-control" asp-for="Workout.Weight"/>
        </div>
        <div class="form-group">
            <label asp-for="Workout.Count">Count</label>
            <input type="number" required="" class="form-control"asp-for="Workout.Count"/>
        </div>
        <input type="submit" class="btn btn-primary"/>
    </div>    
</form>
    </div>
</div>
